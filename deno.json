{
  "tasks": {
    "build": "deno run -A scripts/build.ts",
    "start": "deno run --unstable --allow-all --watch demo/dev.ts",
    "mkcert": "mkcert -install -key-file localhost-key.pem -cert-file localhost-cert.pem localhost",
    "check": "deno fmt && deno lint && deno --unstable check **/*.ts",
    "lock": "rm -f deno.lock && deno --unstable check main.ts"
  },
  "compilerOptions": {
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "lib/htmx.js",
    "dist/"
  ],
  "imports": {
    "$std/": "https://deno.land/std@0.201.0/",
    "https://deno.land/std@0.173.0/": "https://deno.land/std@0.201.0/",
    "https://deno.land/std@0.173.0/encoding/jsonc.ts": "https://deno.land/std@0.201.0/jsonc/mod.ts",
    "$http_fns/": "https://deno.land/x/http_fns@v0.0.27/",
    "esbuild": "https://deno.land/x/esbuild@v0.19.3/mod.js",
    "https://deno.land/x/esbuild@v0.17.19/": "https://deno.land/x/esbuild@v0.19.3/",
    "esbuild_deno_loader": "https://deno.land/x/esbuild_deno_loader@0.8.1/mod.ts",
    "https://deno.land/x/deno_cache@0.4.1/": "https://deno.land/x/deno_cache@0.6.0/"
  }
}
